    "electron boilerplate",
    "minimal",
    "electron-webpack",
    "electron-react",
    "electron-typescript",
    "hmr",
    "boilerplate",
    "2020",
    "ERWT"
  ],
  "eslintConfig": {
    "globals": {
      "window": true
    }
  },
  "license": "MIT",
