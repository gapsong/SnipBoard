  "version": "2.0.2",
  "description": "Minimal boilerplate for writing Desktop Applications using Electron, React, Webpack, TypeScript in 2020",
  "main": ".webpack/main",
  "scripts": {
    "dev": "nodemon --ignore './app/' -e ts  --exec \"cross-env NODE_ENV=development electron-forge start\"",
